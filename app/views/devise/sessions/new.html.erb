<div class='row' id="top-row">
  <div class='col-xs-4'>
  </div>
  <div class='col-xs-4 well'>
    <h2>Lot Sign in</h2>

    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    label: false,
                    placeholder: 'Email',
                    input_html: { class: 'form-control'} %>
                    <br>
        <%= f.input :password,
                    required: true,
                    label: false,
                    placeholder: 'Password',
                    input_html: { class: 'form-control'} %>
                    <br>
        <%= f.input :remember_me,
                    label: false,
                    wrapper_html: { class: 'checkbox' },
                    input_html: { type: 'checkbox' } ,
                    inline_label: 'Yes, remember me',
                    as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign in", class: 'btn btn-lg btn-success btn-block' %>
      </div>
    <% end %>
    <br>
    </div>
  <div class='col-xs-4'>
  </div>
</div>
