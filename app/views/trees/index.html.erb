<div class='row'>
  <div class='col-md-12'>
    <br>
    <div class='panel panel-tree'>
      <div class="panel-heading">Trees</div>
      <div class='panel-body'>
        <div>
          <table class="table">
            <thead>
              <tr>
                <th></th>
                <th>Type</th>
                <th>Height</th>
                <th>Price</th>
                <th class="text-right">Remove?</th>
              </tr>
            </thead>
            <% @trees.each_with_index do |tree, index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= tree.type.name %></td>
                <td><%= tree.height %></td>
                <td><%= "$" + tree.price.to_s %></td>
                <td class="text-right">
                  <%= link_to tree_path(tree), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' do %>
                    <i class="fa fa-trash-o "></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
            <%= simple_form_for @new_tree do |f| %>
              <tr>
                <td>New</td>
                <td>
                  <%= f.input :type_id,
                              label: false,
                              collection: Type.all,
                              required: true,
                              prompt: 'Type',
                              label_method: lambda {|p| p.name },
                              input_html: { class: 'form-control'} %>
                </td>
                <td>
                  <%= f.input :height,
                              label: false,
                              placeholder: 'Height',
                              required: true,
                              input_html: { class: 'form-control'} %>
                </td>
                <td>
                  <%= f.input :price,
                              label: false,
                              placeholder: 'Price',
                              required: true,
                              input_html: { class: 'form-control'} %>
                </td>
                <td class="text-right">
                  <%= f.submit 'Create Tree', class: 'btn btn-success' %>
                </td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
