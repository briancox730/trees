<!DOCTYPE html>
<html>
<head>
  <title>Trees</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="trees-bg">
  <div class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'Christmas Tree Guys', root_path, class: 'navbar-brand' %>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">

        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if current_lot.present? %>
            <li><%= link_to current_lot.name, lot_path(current_lot) %></li>
            <li><%= link_to 'Logout', destroy_lot_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to 'Sign In', new_lot_session_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <p>&nbsp;</p>
  <p>&nbsp;</p>
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-12">
        <% if flash[:notice] %>
          <div class="alert alert-success">
            <%= flash[:notice] %>
          </div>
        <% end %>

        <%= yield %>

        <footer>
        </footer>
      </div>
    </div>

    <span style="background-color: #588526;color: #fff;">
      &nbsp;&nbsp;&nbsp;588526&nbsp;&nbsp;
    </span>
    <span style="background-color: #5f8d2b;color: #fff;">
      &nbsp;&nbsp;&nbsp;5f8d2b&nbsp;&nbsp;
    </span>
    <span style="background-color: #48721c;color: #fff;">
      &nbsp;&nbsp;&nbsp;48721c&nbsp;&nbsp;
    </span>
    <span style="background-color: #79aa37;color: #fff;">
      &nbsp;&nbsp;&nbsp;79aa37&nbsp;&nbsp;
    </span>
    <span style="background-color: #183902;color: #fff;">
      &nbsp;&nbsp;&nbsp;183902&nbsp;&nbsp;
    </span>
    <span style="background-color: #2d510b;color: #fff;">
      &nbsp;&nbsp;&nbsp;2d510b&nbsp;&nbsp;
    </span>
    <span style="background-color: #3b6013;color: #fff;">
      &nbsp;&nbsp;&nbsp;3b6013&nbsp;&nbsp;
    </span>
    <span style="background-color: #355f17;color: #fff;">
      &nbsp;&nbsp;&nbsp;355f17&nbsp;&nbsp;
    </span>
    <span style="background-color: #6b9a30;color: #fff;">
      &nbsp;&nbsp;&nbsp;6b9a30&nbsp;&nbsp;
    </span>
    <span style="background-color: #47711f;color: #fff;">
      &nbsp;&nbsp;&nbsp;47711f&nbsp;&nbsp;
    </span>
  </div>

  <script>
    var top_row = 180 + $('#top-row').height();
    var css = '100% ' + top_row + 'px';
    $('.trees-bg').css('background-size', css);
  </script>
</body>
</html>
