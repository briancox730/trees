<div class="row" id="top-row">
  <div class="col-xs-1">
  </div>
  <div class="col-xs-10 well">
    <h3>Unclaimed Orders!</h3>
    <table class="table table-striped table-responsive">
      <thead>
        <tr>
          <th></th>
          <th>Name</th>
          <th>Address</th>
          <th>City, State, Zipcode</th>
          <th>Tree</th>
          <th>Delivery Selection</th>
          <th>Claim!</th>
        </tr>
      </thead>
      <% @orders.each_with_index do |order, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= order.name %></td>
          <td><%= order.address %></td>
          <td><%= order.city + ", " + order.state + " " + order.zipcode %></td>
          <td><%= order.tree.nil? ? 'tree nil order id: ' + order.id.to_s : order.tree.height.to_s + " ft. " + order.tree.type.name %></td>
          <td><%= order.window.delivery_window %></td>
          <td>
            <%= link_to order_path(id: order.id, order_id: order.id), class: 'btn btn-warning' do %>
              <i class="fa fa-search "></i>
            <% end %>
            <%= link_to order_claim_orders_path(order_id: order.id), method: :post, class: 'btn btn-success' do %>
              <i class="fa fa-star "></i>
            <% end %>
          </td>
          <% order.accessories.each do |a| %>
            <tr>
              <td></td>
              <td></td>
              <td>+Accessory</td>
              <td><%= a.name %></td>
              <td>$<%= a.price %></td>
              <td></td>
              <td></td>
            </tr>
          <% end %>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="col-xs-1">
  </div>
</div>
