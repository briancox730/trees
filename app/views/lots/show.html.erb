<div class='row'>
  <div class="page-header">
    <h1><%= @lot.name %> <small>Tree's for all</small></h1>
  </div>
</div>
<div class='row'>
  <div class='col-xs-8'>
    <div class='panel panel-default'>
      <div class="panel-heading">Your Orders</div>
      <div class='panel-body'>
        <% if @orders.empty? %>
          <p>Add Trees and Zipcodes to start recieving orders!</p>
        <% else %>
          <div style='overflow: auto; max-height: 350px;'>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th></th>
                  <th>Name</th>
                  <th>Remove?</th>
                </tr>
              </thead>
              <% @orders.each_with_index do |order, index| %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%=  %></td>
                  <td class="text-right">
                    <!--<%= link_to zip_path(zip), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' do %>
                      <i class="fa fa-trash-o "></i>
                    <% end %> -->
                  </td>
                </tr>
              <% end %>
            </table>
          </div>
        <% end %>
      </div>
    </div>

    <div class='panel panel-default'>
      <div class="panel-heading">Available Trees</div>
      <div class='panel-body'>
        <div style='overflow: auto; max-height: 500px;'>
          <table class="table">
            <thead>
              <tr>
                <th></th>
                <th>Type</th>
                <th>Height</th>
                <th>Price</th>
                <th class="text-right">Add/Remove</th>
              </tr>
            </thead>
            <% @trees.each_with_index do |tree, index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= tree.type.name %></td>
                <td><%= tree.height %></td>
                <td><%= "$" + (tree.price / 100.00).to_s %></td>
                <td class="text-right">
                  <%= link_to trees_path(tree), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-success' do %>
                    <i class="fa fa-plus"></i>
                  <% end %>
                  <%= link_to trees_path(tree), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' do %>
                    <i class="fa fa-remove"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>

  <div class='col-xs-4'>
    <div class='panel panel-default'>
      <div class="panel-heading">Zipcodes served</div>
      <div class='panel-body'>
        <% if @delivery_zipcodes.empty? %>
          <p>Add a zipcode and start recieving orders!</p>
        <% end %>
        <div style='overflow: auto; max-height: 350px;'>
          <table class="table table-striped">
            <thead>
              <tr>
                <th></th>
                <th>Zipcode</th>
                <th class="text-right">Remove?</th>
              </tr>
            </thead>
            <% @delivery_zipcodes.each_with_index do |zip, index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= zip.code %></td>
                <td class="text-right">
                  <%= link_to zip_path(zip), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' do %>
                    <i class="fa fa-trash-o "></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </table>
        </div>
        <%= simple_form_for @new_zip do |f| %>
          <%= f.input :code,
                      input_html: { class: 'form-control'},
                      label: false,
                      placeholder: 'Add a zipcode' %>
          <%= f.input :lot_id,
                      as: :hidden,
                      input_html: { value: @lot.id}
                      %>
          <br>
          <%= f.submit "Submit", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
