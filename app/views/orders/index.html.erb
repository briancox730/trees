<div class="container">
  <br>
  <div class="row" id="top-row">
    <div class="col-md-4 col-xs-1 col-sm-2">
    </div>
    <div class="col-xs-10 col-sm-8 col-md-4  well">
      <h2>Enter your zipcode</h2>
      <br>
      <%= simple_form_for :zipcode_search,  url: zipcode_search_orders_path , method: :get do |f| %>
        <%= f.input :zipcode,
                    autofocus: true,
                    input_html: { class: 'form-control'},
                    label: false,
                    placeholder: 'Search our delivery network!' %>
        <br>
        <%= f.submit "Submit", class: 'btn btn-primary' %>
      <% end %>
    </div>
    <div class="col-md-4 col-xs-1 col-sm-2">
    </div>
  </div>

  <br>
  <br>

  <%= render "onetwothree" %>
</div>

