.text-right {
  text-align: right;
}

.text-left {
  text-align: left;
}

.text-center {
  text-align: center;
}

.center {
  display: block;
  margin-right: auto;
  margin-left: auto;
}

.right {
  float: right;
}

.left {
  float: left;
}

.display-none {
  display: none;
}

.trees-bg {
  background: url(<%= asset_path 'tree-bg.jpg' %>) no-repeat center top;
}

.tree-display {
  height: 125px;
  position: relative;
  background-image: none;
  border: 1px solid #ccc;
  border-radius: 4px;
  -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
  box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
  -webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
  -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
  transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
  text-shadow: 4px 4px 2px rgba(0, 0, 0, 0.7);
}

.balsam {
  background-image: url(<%= asset_path 'balsam.jpg' %>);
  background-position: center center;
}

.fraser {
  background-image: url(<%= asset_path 'fraser.jpg' %>);
  background-position: center bottom;
}

.balsam .tree-icons {
  position: absolute;
  bottom: 15px;
  left: 15px;
  color: #FFF;
}

.fraser .tree-icons {
  position: absolute;
  bottom: 15px;
  right: 15px;
  color: #FFF;
}

.tree-description {
  width: 100%;
  color: #fff;
  padding: 1px 10px 0 10px;
}

.padding {
  padding: 20px;
}

.light-green {
  color: #79aa37;
}

.green {
  color: #3b6013;
}

.white {
  color: #ffffff;
}

.red {
  color: red;
}

.grey {
  color: #3F3F3F;
}

.light-grey {
  color: #d3d3d3;
}

.background-green {
  border-top: 1px solid #79aa37;
  background-color: #48721c;
}

.background-white {
  background-color: #fff;
}

.background-grey {
  border-top: 1px solid #696969;
  background-color: #3F3F3F;
}

.panel-tree {
  border-color: #5f8d2b;
}

.panel-tree>.panel-heading {
  color: #fff;
  background-color: #5f8d2b;
  border-color: #5f8d2b;
}

.footer {
  height: 100%;
}

* {
  margin: 0;
}
html, body {
  height: 100%;
}
.page-wrap {
  min-height: 100%;
  /* equal to footer height */
  margin-bottom: -181px;
}
.page-wrap:after {
  content: "";
  display: block;
}
.site-footer, .page-wrap:after {
  height: 181px;
}

.tab {
  margin-left: 15px;
}

.zip-search {
  margin: 40px 0 30px 0;
  border-radius: 8px;
  -moz-border-radius: 8px;
  -webkit-border-radius: 8px;
  background: rgba(63,63,63,.8);
  border: 1px solid #555;
}

.price-h3 {
  margin: 10px;
}

.clearfixx {
  overflow: auto;
}

.round-border {
  border: 1px solid #79aa37;
  border-radius: 4px;
  margin: 20px 0 20px 0;
}
